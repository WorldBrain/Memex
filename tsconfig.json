{
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "jsx": "react",
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipDefaultLibCheck": true,
        "strictNullChecks": false,
        "outDir": "tmp",
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
