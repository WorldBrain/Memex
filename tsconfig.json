{
    "compilerOptions": {
        "allowJs": true,
        "target": "es6",
        "module": "es2015",
        "moduleResolution": "node",
        "jsx": "react",
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "outDir": "tmp",
        "lib": [
            "es2015",
            "dom"
        ],
        "paths": {
            "abstract-leveldown": [
                "node_modules/abstract-leveldown"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}