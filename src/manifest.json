{
    "name": "WebMemex",
    "version": "0.2.4",
    "background": {
        "scripts": ["lib/browser-polyfill.js", "background.js"]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["lib/browser-polyfill.js", "content_script.js"],
        "run_at": "document_start"
    }],
    "browser_action": {
        "default_title": "WebMemex",
        "default_popup": "/popup.html"
    },
    "commands": {
        "openOverview": {
            "suggested_key": {
                "default": "Ctrl+Y"
            },
            "description": "Open memory overview"
        },
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+M"
            },
            "description": "Store this page"
        }
    },
    "applications": {
        "gecko": {
            "id": "{37e031df-9c74-412e-b933-e847443ad005}"
        }
    },
    "permissions": [
        "<all_urls>",
        "contextMenus",
        "downloads",
        "history",
        "storage",
        "tabs",
        "unlimitedStorage",
        "webNavigation"
    ],
    "web_accessible_resources": [
      "/lib/pdf.worker.min.js"
    ],
    "omnibox": { "keyword" : "m" },
    "manifest_version": 2
}
